{
  "IF": {
    "prefix": ["if"],
    "body": [
      "if [ ${1:condition} ]",
      "then",
      "\t$0",
      "fi"
    ],
    "description": "if statement"
  },
  "CASE": {
    "prefix": ["case"],
    "body": [
      "case ${1:var} in",
      "\t${2:case}",
      "\t\t$0",
      "\t\t;;",
      "esac"
    ],
    "description": "case statement"
  },
  "FUNC": {
    "prefix": ["func"],
    "body": [
      "${1:name}() {",
      "\t$0",
      "}"
    ],
    "description": "function"
  },
  "ARR": {
    "prefix": ["arr"],
    "body": [
      "declare -a ${1:name}=($0)"
    ],
    "description": "array"
  }
}
